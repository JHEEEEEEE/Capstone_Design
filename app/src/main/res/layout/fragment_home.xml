<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">


        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:title="창문 개폐"
                app:titleTextColor="#2196F3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:background="@color/white">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:columnCount="2"
                    android:rowCount="1">

                    <Button
                        android:id="@+id/window_openclose"
                        android:layout_width="174dp"
                        android:layout_height="175dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/round_button"
                        android:drawableTop="@drawable/icon_on_off1"
                        android:drawablePadding="-1dp"
                        android:text="open" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="129dp"
                        android:layout_height="178dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/round_button"
                        android:backgroundTint="#FFFFFF"
                        android:drawableTop="@drawable/setting"
                        android:text="자동 개폐" />

                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:background="@drawable/gradient_background" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:background="@color/white" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="3"
                    android:columnCount="3"
                    android:layout_gravity="center"
                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/system"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM"
                        android:textColor="#2196F3"
                        android:textSize="24sp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/wifi_onoff"
                        android:layout_width="113dp"
                        android:layout_height="119dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button"
                        android:drawableTop="@drawable/wifi_on"
                        android:text="on"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/lock_onoff"
                        android:layout_width="113dp"
                        android:layout_height="119dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/round_button"
                        android:drawableTop="@drawable/lock_on"
                        android:text="on"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/wifi_onoff3"
                        android:layout_width="113dp"
                        android:layout_height="119dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_button"
                        android:drawableTop="@drawable/people"
                        android:text="2인"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WiFi 연결"
                        android:textSize="16sp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="창문 잠금"
                        android:textSize="16sp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="재실 인원"
                        android:textSize="16sp"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"/>

                </GridLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:background="@color/white" >
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>